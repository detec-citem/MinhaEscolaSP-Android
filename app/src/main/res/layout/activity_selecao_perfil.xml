<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    tools:context="br.gov.sp.educacao.minhaescola.view.SelecaoPerfilActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/perfil_imgAluno"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/aluno"
            android:onClick="selecionarPerfil"/>

        <TextView
            android:id="@+id/perfil_txtAluno"
            android:layout_width="180dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="aluno(a)"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:onClick="selecionarPerfil"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/perfil_imgResp"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center"
            android:background="@drawable/perfil_responsavel"

            android:onClick="selecionarPerfil"/>

        <TextView
            android:id="@+id/perfil_txtResp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="responsÃ¡vel"
            android:textColor="@color/colorWhite"
            android:textSize="22sp"
            android:textStyle="bold"
            android:onClick="selecionarPerfil"/>

    </LinearLayout>

</LinearLayout>
