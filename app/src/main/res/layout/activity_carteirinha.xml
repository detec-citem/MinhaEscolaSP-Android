<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.gov.sp.educacao.minhaescola.view.CarteirinhaActivity"
    android:background="@drawable/background_carteirinha">

    <TextView
        android:id="@+id/carteira_txtNomeEscola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="16dp"
        android:text="Nome da escola"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/carteira_txtTurma"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/carteira_txtDataNasc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="16dp"
        android:text="Nasc: 02/02/2002"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/carteira_txtNomeEscola"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/carteira_imgFoto"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@color/cinza"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/carteira_txtApelido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="Apelido"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/colorNomeCart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/carteira_txtNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="Nome muito muito muito muito grande"
        android:textColor="@color/colorWhite"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carteira_txtApelido"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/carteira_shape_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/shape_botao_voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/carteira_btnVoltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="invisible"/>


    <ImageView
        android:id="@+id/carteira_imgQr"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toRightOf="@+id/carteira_imgFoto"
        android:src="@color/cinza"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/carteira_txtCodigo"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/carteira_txtCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="13sp"
        android:textStyle="bold"
        android:text="codigo QR"
        app:layout_constraintBottom_toBottomOf="@+id/carteira_imgFoto"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/carteira_imgQr"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/carteira_imgQr"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/carteira_txtValidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="01/01/2001"
        android:textColor="@color/colorWhite"
        android:textSize="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/carteira_txtRg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00.000.000-0"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/carteira_txtTurma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="16dp"
        android:text="6ยบ Ano Ensino Fundamental"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/carteira_txtRg"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="invisible"/>

    <ProgressBar
        android:id="@+id/carteira_progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:visibility="visible"/>

</android.support.constraint.ConstraintLayout>
