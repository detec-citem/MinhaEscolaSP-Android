<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/azul_background_alimentacao_mensagem"
    android:orientation="vertical"
    tools:context=".view.new_alimentacao.AvaliacaoQuestao3Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avaliacao_q3_voltar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="12dp"
            android:padding="5dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/txtAvaliar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="avaliar"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="25sp" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="O que agradou você na alimentação escolar hoje?"
        android:textColor="@color/colorWhite"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/avaliacao_q3_opc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_quadrado_borda"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/shape_opc_borda_default">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/avaliacao_q3_opc1_check"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        app:lottie_fileName="animation_check_avaliacao.json" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="Sabor / Tempero"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/avaliacao_q3_opc2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_quadrado_borda"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/shape_opc_borda_default">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/avaliacao_q3_opc2_check"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        app:lottie_fileName="animation_check_avaliacao.json" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="Aparência"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/avaliacao_q3_opc3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_quadrado_borda"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/shape_opc_borda_default">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/avaliacao_q3_opc3_check"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        app:lottie_fileName="animation_check_avaliacao.json" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Cardápio do dia"
                    android:textSize="25sp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/avaliacao_q3_opc4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_quadrado_borda"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/shape_opc_borda_default">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/avaliacao_q3_opc4_check"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        app:lottie_fileName="animation_check_avaliacao.json" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Combinação dos alimentos"
                    android:textSize="25sp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/avaliacao_q3_opc5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_quadrado_borda"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/shape_opc_borda_default">

                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/avaliacao_q3_opc5_check"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        app:lottie_fileName="animation_check_avaliacao.json" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Qualidade dos alimentos"
                    android:textSize="25sp"
                    android:textColor="@color/colorWhite"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="15dp"/>

            </LinearLayout>

            <Button
                android:id="@+id/avaliacao_q3_btnConcluir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:padding="10dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="26sp"
                android:background="@drawable/shape_button_verde"
                android:text="concluir"
                android:elevation="2dp"
                android:textAllCaps="false"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>