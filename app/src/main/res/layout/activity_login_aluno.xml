<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.gov.sp.educacao.minhaescola.view.LoginAlunoActivity"
    android:background="@drawable/background1">

    <EditText
        android:id="@+id/loginAluno_editDigRA"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/colorWhite"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:maxLength="1"
        android:maxLines="1"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:theme="@style/SelectionColor"
        app:layout_constraintBottom_toBottomOf="@+id/loginAluno_editRA"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/loginAluno_editRA"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:srcCompat="@drawable/ic_back"
        android:onClick="voltarSelecaoPerfil"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:layout_marginTop="65dp"
        android:text="RA do(a) aluno(a):"
        android:textColor="@color/colorWhite"
        android:textSize="23sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.198" />

    <TextView
        android:id="@+id/loginAluno_ajudaRA"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginLeft="6dp"
        android:textAlignment="center"
        android:gravity="center"
        android:onClick="exibirAjudaLoginAluno"
        android:background="@drawable/shape_circulo_borda"
        android:text="\?"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.666"
        android:layout_marginStart="6dp" />

    <EditText
        android:id="@+id/loginAluno_editRA"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorWhite"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="9"
        android:maxLines="1"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:theme="@style/SelectionColor"
        app:layout_constraintLeft_toLeftOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="-"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/loginAluno_editRA"
        app:layout_constraintBottom_toBottomOf="@+id/loginAluno_editRA"
        android:id="@+id/textView5"
        android:layout_marginStart="8dp"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/loginAluno_editRA"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="senha:"
        android:textColor="@color/colorWhite"
        android:textSize="23sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/loginAluno_editRA"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />

    <TextView
        android:id="@+id/loginAluno_ajudaSenha"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:background="@drawable/shape_circulo_borda"
        android:gravity="center"
        android:onClick="exibirAjudaLoginAluno"
        android:text="\?"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView9"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/textView9"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView9"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp" />

    <EditText
        android:id="@+id/loginResp_editSenha"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/colorWhite"
        android:inputType="textWebPassword"
        android:maxLines="1"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:theme="@style/SelectionColor"
        app:layout_constraintLeft_toLeftOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <Button
        android:layout_width="220dp"
        android:layout_height="55dp"
        android:layout_gravity="center"
        android:background="@drawable/shape_button"
        android:elevation="4dp"
        android:onClick="loginAluno"
        android:text="entrar"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="26sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/loginResp_editSenha"
        android:id="@+id/button3"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center|bottom"
        android:onClick="esqueceuSenha"
        android:padding="8dp"
        android:text="esqueci minha senha"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button3" />

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_marginEnd="43dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/shape_quadrado_borda"
        app:layout_constraintBottom_toBottomOf="@+id/loginAluno_editDigRA"
        app:layout_constraintLeft_toRightOf="@+id/loginAluno_editDigRA"
        app:layout_constraintTop_toTopOf="@+id/loginAluno_editDigRA"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginRight="43dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="24dp">

        <Spinner
            android:id="@+id/spnEstadosRA"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:backgroundTint="@color/colorWhite"
            android:dropDownWidth="60dp"
            app:layout_constraintRight_toRightOf="parent" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
